<div class="content">
  <h1 class="title is-3">Gerar relatório de ocorrências</h1>
  <%= form_with url: report_incidents_path, method: :post do |f|%>
  <fieldset>
    <legend>Dados estudante</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <%= f.label :student, 'Estudante', class: 'label' %>
          <p class="control">
            <span class="select">
              <%= f.select :student, Student.get_all, { prompt: "Selecione o estudante" }, { :class => "select2 select is-medium" } %>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :student, 'Estudante', class: 'label' %>
          <p class="control">
            <span class="select">
              <%= f.select :student, Student.get_all, { prompt: "Selecione o estudante" }, { :class => "select2 select is-medium" } %>
            </span>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :date_start, 'Data início', class: 'label' %>
            <%= f.text_field :date_start, class: 'input is-medium date', placeholder: 'Data ocorrência', required: true %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :date_final, 'Data final', class: 'label' %>
            <%= f.text_field :date_start, class: 'input is-medium date', placeholder: 'Data ocorrência', required: true %>
          </p>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="control is-grouped is-pulled-left margin-top-20px">
    <p class="control">
      <%= f.button "Gerar relatório", class: "button is-success is-medium in-mobile-expand", formtarget: "_blank"%>
    </p>
  </div>
  <% end %>
</div>

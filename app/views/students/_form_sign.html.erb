<%= form_for incident, method: :post, url: incident_sign_path(incident, id: incident) do |f| %>
  <fieldset>
    <legend>Dados para autenticação</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :ra, "R.A", class: 'label' %>
            <%= f.text_field :ra, class: 'input is-medium', placeholder: 'R.A', value: incident.student.ra, disabled: true  %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :password, "Senha", class: 'label' %>
            <%= f.password_field :password, class: 'input is-medium' %>
          </p>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="margin-top-20px">
    <p class="control">
      <%= f.submit "Assinar", class: "button is-success is-medium in-mobile-expand"%>
    </p>
  </div>
<% end %>

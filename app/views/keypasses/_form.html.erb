<%= form_for keypass do |f| %>
  <fieldset>
    <legend>Dados para identificação</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :title, "Título", class: 'label' %>
            <%= f.text_field :title, class: 'input is-medium', placeholder: 'Título', required: true %>
          </p>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :local_service, "Endereço serviço", class: 'label' %>
            <%= f.text_field :local_service, class: 'input is-medium', placeholder: 'Local de uso / Ex: 10.0.6.1', required: true %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :local, "Local", class: 'label' %>
            <span class="select is-medium">
              <%= f.select :local, Keypass.locals.keys.to_a, { prompt: "Selecione o local" }, { :class => "select2" } %>
            </span>
          </p>
        </div>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <legend>Dados de acesso</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :user, "Úsuario", class: 'label' %>
            <%= f.text_field :user, class: 'input is-medium', placeholder: 'Usuário', required: true %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :key, "Senha", class: 'label' %>
            <%= f.text_field :key, class: 'input is-medium', placeholder: 'Senha', required: true %>
          </p>
        </div>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <legend>Descrição adicional</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :description, "Descrição", class: 'label' %>
            <%= f.text_area :description, class: 'textarea is-medium', placeholder: 'Descrição' %>
          </p>
        </div>
      </div>
    </div>
  </fieldset>
  <div class="control is-grouped is-pulled-left margin-top-20px">
    <p class="control">
      <%= f.submit "Salvar", class: "button is-success is-medium"%>
    </p>
  </div>
<% end %>

<%= form_for user do |f| %>
  <fieldset>
    <legend>Dados pessoais</legend>
    <div class="control is-grouped">
      <p class="control is-expanded">
        <%= f.label :name, 'Nome', class: 'label' %>
        <%= f.text_field :name, class: 'input is-medium', placeholder: 'Nome', required: true %>
      </p>
      <p class="control is-expanded">
        <%= f.label :avatar, 'Imagem', class: 'label' %>
        <%= f.file_field :avatar, class: 'input is-medium', placeholder: 'Nome', required: true %>
      </p>
    </div>
  </fieldset>

  <fieldset>
    <legend>Dados Institucionais</legend>
    <p class="control">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, class: 'input is-medium', placeholder: 'Email', required: true %>
    </p>

    <div class="control is-grouped">
      <p class="control is-expanded">
        <%= f.label :siape, class: 'label' %>
        <%= f.text_field :siape, class: 'input is-medium', placeholder: 'SIAPE', required: true %>
      </p>
      <p class="control">
        <%= f.label :sector_id, 'Setor', class: 'label' %>
        <span class="select is-medium">
          <%= f.select :sector_id, Sector.initials, { prompt: "Selecione o setor" }, { :class => "select2" } %>
        </span>
      </p>
      <p class="control">
        <%= f.label :position_id, 'Cargo/Função', class: 'label' %>
        <span class="select is-medium">
          <%= f.select :position_id, Position.get_all, { prompt: "Selecione o cargo" }, { :class => "select2" } %>
        </span>
      </p>
    </div>
  </fieldset>

  <fieldset>
    <legend>Dados de acesso</legend>
    <div class="control is-grouped">
      <p class="control is-expanded">
        <%= f.label :username, 'Usuário', class: 'label' %>
        <%= f.text_field :username, class: 'input is-medium', placeholder: 'Usuário', required: true %>
      </p>
      <p class="control is-expanded">
        <%= f.label :password, 'Senha', class: 'label' %>
        <%= f.password_field :password, class: 'input is-medium', placeholder: 'Senha' %>
      </p>
      <p class="control is-expanded">
        <%= f.label :password_confirmation, 'Repetir senha', class: 'label' %>
        <%= f.password_field :password_confirmation, class: 'input is-medium', placeholder: 'Confimação senha' %>
      </p>
    </div>
  </fieldset>

  <div class="control is-grouped is-pulled-left margin-top-20px ">
    <p class="control">
      <%= f.submit "Salvar", class: "button is-success is-medium"%>
    </p>
  </div>
<% end %>
